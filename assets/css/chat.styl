
@import 'nib'

messageEntryHeight = 100px

chatPadding = 20px
cardGap = 20px

chat-block-padding()
	padding-top 5px
	padding-bottom 5px
	padding-right 25px

.sidebar
	position fixed
	padding 0
	height 100%

	.global-search
		padding 15px

	.sidebar-header
		padding-left 15px
		

.card-tower
	padding 20px
	box-shadow inset 0px 0px 10px rgba(0,0,0,0.5)
	background-color #efefef
	height 100%
	overflow-y scroll

	.card
		width 100%
		min-height 200px
		margin-bottom cardGap

.chat
	height 100%

	.chat-tabs
		height tabsHeight

	.chat-view
		overflow-y scroll
		chat-block-padding()
		padding-right 15px
		height calc(100% - 150px)

		.message
			height 50px
			margin-bottom chatPadding

	.message-entry
		chat-block-padding()
		height messageEntryHeight

		textarea
			width 100%
			height 100%

	.message-toolbar
		chat-block-padding()
		height 50px

		.send-button
			float right
			height 100%

